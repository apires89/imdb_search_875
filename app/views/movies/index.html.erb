<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
    <%= simple_form_for :search, method: :get, url: movies_path do |f| %>
    <%= f.input :query, class:"form-control", placeholder: "Find a Movie", label: false, input_html: { value: params[:search][:query] }  %>
    <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>



  <div class="row justify-content-center">
    <div class="col-sm-8">
      <% if @movies.present? %>
      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.title %></h4>
          <p><%= movie.synopsis %></p>
        <% end %>
      </div>
      <% else %>
      <div class="no-results">
        No results... Try again!
      </div>
      <% end %>
    </div>
  </div>
</div>
